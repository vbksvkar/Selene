    "version": "0.2.0",
    "configurations": [{
        "name": ".NET Launch",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/Api/bin/Debug/net8.0/Api.dll",
        "args": [],
        "cwd": "${workspaceFolder}/Api",
        "stopAtEntry": false,
        "serverReadyAction": {
            "action": "openExternally",
            "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        }        
    }]
}